# ClawRunner Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgres://user:password@host:port/database?sslmode=require
DATABASE_URL=postgres://user:password@localhost:5432/clawrunner

# =============================================================================
# NANGO (OAuth)
# =============================================================================
# Nango secret key for API access (required)
# Get this from your Nango dashboard: https://app.nango.dev
NANGO_SECRET_KEY=

# Optional: Custom Nango host (for self-hosted Nango instances)
# NANGO_HOST=https://api.nango.dev

# =============================================================================
# SERVER
# =============================================================================
# Port for the API server (optional, defaults to 3000)
PORT=3000

# Node environment
NODE_ENV=development

# =============================================================================
# FLY.IO DEPLOYMENT (required for production)
# =============================================================================
# Fly.io API token for machine management
# Generate at: https://fly.io/user/personal_access_tokens
FLY_API_TOKEN=

# Fly.io app name (set automatically in deployed environment)
# FLY_APP_NAME=clawrunner

# Fly.io region (set automatically in deployed environment)
# FLY_REGION=iad
